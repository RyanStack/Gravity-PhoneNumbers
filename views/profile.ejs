<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/reset.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/application.css">

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript" src="http://code.angularjs.org/1.2.6/angular.min.js"></script>
    <script type="text/javascript" src="javascripts/client/application.js"></script>

</head>
<body ng-app="MyApp">
<div class="container">

  <div class="page-header text-center">
    <h1><span class="fa fa-anchor"></span> Welcome <%= user.local.email %>! </h1>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </div>

  <div class="row" ng-controller="numbersCtrl">

    <div class="col-sm-6">
      <div class="well">
        <h3 id="inputDirections">Upload Number Files</h3>
        <br>
        <hr>
        <br>
        <form ng-submit="numbersAlgo()" role="form">
          <div class="form-group">
            <input type="file" on-read-file="showContent($fileContent)"required>
          </div>
        </form>

      </div>
    </div>

    <div class="col-sm-6">
      <div class="well">
        <h3><span class="fa fa-user"></span></h3>
          <div ng-if="content">
            <h2>File content is:</h2>
            <pre>{{ content }}</pre>
          </div>

      </div>
    </div>

  </div>

</div>
</body>
</html>
